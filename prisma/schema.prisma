generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // for local development
  // url      = env("DATABASE_URL")
  // for Vercel
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition
  owner     String
}

model Product {
  id       Int    @id @default(autoincrement())
  option   Option
  size     Size
  quantity Int
  owner    String
  color1   Color
  color2   Color
  color3   Color
  checkedout Boolean @default(false)
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum Option {
  CRYSTAL_DRAGON
  WINGED_CRYSTAL_DRAGON
  MECHANICAL_DRAGON
  IMPERIAL_DRAGON
  FROG
  AXOLOTL
  GECKO
  RAT
  FERRET
  KNIGHT
  SAMURAI
}

enum Size {
  x0_5
  x1
  x2
  x3
}

enum Color {
  red
  pink
  orange
  yellow
  green
  blue
  purple
  brown
  black
  gray
  white
}

model Custom_Orders {
  id          Int    @id @default(autoincrement())
  user        String
  description String
  material1   String
  material2   String
  material3   String
  type        String
}